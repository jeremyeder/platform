{
  "mcpServers": {
    "mcp-atlassian": {
      "command": "mcp-atlassian",
      "args": [],
      "env": {
        "JIRA_URL": "${JIRA_URL}",
        "JIRA_PERSONAL_TOKEN": "${JIRA_API_TOKEN}",
        "JIRA_SSL_VERIFY": "true",
        "READ_ONLY_MODE": "true"
      }
    },
    "mcp-ambient": {
      "command": "mcp-ambient-server",
      "args": [],
      "env": {
        "BACKEND_API_URL": "${BACKEND_API_URL}",
        "BOT_TOKEN": "${BOT_TOKEN}"
      }
    }
  }
}
